<div class="container">
  <h3><%= @movie.title %></h3>
  <img src="<%= @movie.poster_url %>" alt="img">
  <%= @movie.category %>
  <%= @movie.description %>
  <%= @movie.year %>
  <%= @movie.rating %>

  <%= simple_form_for [@movie, @favorite] do|f|%>
    <%= f.association :list %>
    <%= f.submit "add this movie to my list"%>
  <%end%>

  <%= link_to "Back to movies", movies_path %>
  <%= link_to "Home", root_path %>
</div>
